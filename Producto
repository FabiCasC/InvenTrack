package com.inventario.model;

public class Producto {
    private int id;
    private String nombre;
    private String tipo; // "perecible" o "no_perecible"
    private int cantidad;
    private int stockMinimo;
    private String unidad;
    private double precio;

    public Producto(int id, String nombre, String tipo, int cantidad, int stockMinimo, String unidad, double precio) {
        this.id = id;
        this.nombre = nombre;
        this.tipo = tipo;
        this.cantidad = cantidad;
        this.stockMinimo = stockMinimo;
        this.unidad = unidad;
        this.precio = precio;
    }

    // Getters y setters
    public int getId() { return id; }
    public String getNombre() { return nombre; }
    public String getTipo() { return tipo; }
    public int getCantidad() { return cantidad; }
    public void setCantidad(int cantidad) { this.cantidad = cantidad; }
    public int getStockMinimo() { return stockMinimo; }
    public String toString() {
        return String.format("id=%d | %s | tipo=%s | cant=%d | min=%d", id, nombre, tipo, cantidad, stockMinimo);
    }
}
